{
  "name": "kano-components",
  "version": "4.0.0",
  "main": "index.js",
  "license": "MIT",
  "resolutions": {
    "eslint-config-airbnb-base": "13.1.0",
    "@kano/es6-resolution": "1.0.16"
  },
  "devDependencies": {
    "@kano/web-tester": "^1.0.0-alpha.10",
    "lerna": "^3.5.1"
  },
  "scripts": {
    "serve": "es6-server",
    "serve-test": "web-tester serve ./packages/**/*.test.js",
    "test": "web-tester run ./packages/**/*.test.js -r spec",
    "test-ci": "yarn run --silent test > test-results.xml",
    "lint": "eslint ./packages/**/*.js",
    "lint-ci": "yarn lint -f checkstyle -o eslint.xml",
    "prepublishOnly": "yarn run test"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
