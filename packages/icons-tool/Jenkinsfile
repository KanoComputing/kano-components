#!groovy

@Library('kanolib') _

pipeline {
    agent {
        label 'ubuntu_18.04'
    }
    tools {
        nodejs 'Node 8.11.2'
    }
    post {
        regression {
            notify_culprits currentBuild.result
        }
        always {
            junit allowEmptyResults: true, testResults: 'icons-tool/test-results.xml'
            step([$class: 'CheckStylePublisher', pattern: 'icons-tool/eslint.xml'])
        }
    }
    stages {
        stage('main') {
            when {
                changeset 'icons-tool/**/*'
            }
            stages {
                stage('tools') {
                    steps {
                        dir('icons-tool') {
                            script {
                                def YARN_PATH = tool name: 'yarn'
                                env.PATH = "${env.PATH}:${YARN_PATH}/bin"
                            }
                        }
                    }
                }
                stage('install deps') {
                    steps {
                        dir('icons-tool') {
                            script {
                                sh "yarn"
                            }
                        }
                    }
                }
                stage('checkstyle') {
                    steps {
                        dir('icons-tool') {
                            script {
                                sh "yarn checkstyle-ci"
                            }
                        }
                    }
                }
                stage('run tests') {
                    environment {
                        JUNIT_REPORT_PATH = 'test-results.xml'
                    }
                    steps {
                        dir('icons-tool') {
                            script {
                                sh "yarn test-ci"
                            }
                        }
                    }
                }
            }
        }
    }
}
